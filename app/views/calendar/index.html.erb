<% if user_signed_in? %>
<div id='calendar'></div>
<div id = "create_event_dialog" style ="display:none;">
  <div id = "create_event">
  	<%= render :partial => '/events/form', :event => Event.new%>
  	
  </div>
</div>
<% else %>
 <center><h1>Welcome To The Calendar App</h1>
    <h3>Sign in to view your calendar </h3>
        
 <%= form_for("user", :url => user_session_path) do |f| %>
   <div class="field">
    <%= f.label :email%>
    <%= f.text_field :email %><br />
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %><br />
  </div>
  <div class="field">
   <%= f.check_box :remember_me %><br />
 	<%= f.label :remember_me %>
	</div>
  <div class="actions">
  	<%= f.submit 'Sign in', class: "btn btn-primary btn-large" %><!--follbutton-->
      
     
   </div>
    <br>
  <%= link_to "Forgot your password?", new_password_path('user') %>
  </div>
  <br>
    <br>
    <br>
  <h4>Not a user? Click here to sign up </h4>
 <td><a class="btn btn-success btn-large" <%= link_to "Sign Up", new_user_registration_path %></a></td>
    
  </center> 
<% end %>
<% end %>

