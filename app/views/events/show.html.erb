<section id="tables">
  <div class="page-header">
    <h1><%= @event.title %></h1>
  </div>
  
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Starts at: </th>
        <th>Ends at:</th>
        <th>All day:</th>
        <th>Description:</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @event.starts_at.strftime("%A, %B %d at %I:%M %p") %></td>
        <td><%= @event.ends_at.strftime("%A, %B %d at %I:%M %p") %></td>
        <td> <%= @event.all_day %></td>
        <td><%= @event.description %></td>
      </tr>
     
    </tbody>
  </table>
</section>

<div id="contact_list">
	<% if @contacts.count >0 %>
	Contacts: <br />
	<p>
		<%@contacts.each do |contact|%>
			<%= contact.email %><br />
		<% end %>
	</p>
	<% else %>
	<p>No Contacts!</p><br />
	<% end %>
</div>

<p>
<td><a class="btn btn-primary" <%= link_to 'New Event', new_event_path %></a></td>
<td><a class="btn btn-primary" <%= link_to 'Edit', edit_event_path(@event) %></a></td>
<td><a class="btn btn-primary" <%= link_to 'Destroy', event_path, :confirm => 'Are you sure?', :method => :delete %></a></td>
<br>
<br>
<td><a class="btn btn-primary" <%= link_to 'Back to Calendar', calendar_index_path %></a></td>
</p>
