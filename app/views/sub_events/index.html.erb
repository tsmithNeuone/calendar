<h1>Listing sub_events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>All day</th>
    <th>Description</th>
    <th>Notify contacts</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sub_events.each do |sub_event| %>
  <tr>
    <td><%= sub_event.title %></td>
    <td><%= sub_event.starts_at %></td>
    <td><%= sub_event.ends_at %></td>
    <td><%= sub_event.all_day %></td>
    <td><%= sub_event.description %></td>
    <td><%= sub_event.notify_contacts %></td>
    <td><%= link_to 'Show', sub_event %></td>
    <td><%= link_to 'Edit', edit_sub_event_path(sub_event) %></td>
    <td><%= link_to 'Destroy', sub_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

