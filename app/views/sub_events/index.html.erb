<section id="tables">
  <div class="page-header">
  	<link rel="shortcut icon" type="image/x-icon" href="/assets/images/13173095-calendar-vector-icon.jpg">
<h1>Recurring Events</h1>
 </div>
<table class="table table-bordered table-striped table-hover">
   <thead>
  <tr>
    <th>Title</th>
    <th>Starts on</th>
    <th>Ends on</th>
    <th>All day</th>
    <th>Description</th>
    <th>Notify Contacts</th>
    <th></th>
    <th></th>
  </tr>
</thead>
    <tbody>



   

<% @sub_events.each do |sub_event| %>
  <tr>
    <td><%= sub_event.title %></td>
    <td><%= sub_event.starts_at.strftime("%A, %B %d at %I:%M %p")%></td>
    <td><%= sub_event.ends_at.strftime("%A, %B %d at %I:%M %p")%></td>
    <td><%= sub_event.all_day %></td>
    <td><%= sub_event.description %></td>
    <td><%= sub_event.notify_contacts %></td>
    <td><%= link_to 'Show', sub_event %></td>
    <td><%= link_to 'Edit', edit_sub_event_path(sub_event) %></td>
    <td><%= link_to 'Destroy', sub_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

